<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_gravity="center"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:background="@drawable/lqa_bonus_background">

    <ImageView
        android:id="@+id/imgv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00ffffff"
        android:paddingRight="17dp"
        android:paddingTop="17dp"
        android:src="@drawable/lqa_dialog_colse" />

    <ImageView
        android:id="@+id/imgv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgv_close"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:maxHeight="180dp"
        android:scaleType="center"
        android:src="@drawable/lqa_spectators" />


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="12dp"
        android:text="继续观看"
        android:textColor="#FF4A90E2"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_confirm"
        android:layout_centerHorizontal="true"
        android:text="您被淘汰了~"
        android:textColor="#ff333333"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />


</RelativeLayout>